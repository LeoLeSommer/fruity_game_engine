{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["es6"],
    "module": "esnext",
    "moduleResolution": "node",
    "rootDir": ".",
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  }
}
